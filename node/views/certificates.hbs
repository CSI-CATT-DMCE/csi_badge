<form action="/certificates" method="POST" class="border border-light p-5">

	<p class="h4 mb-4 text-center">Send Certificates</p>

	<div class="input-group mb-3">
		<div class="input-group-prepend">
			<label class="input-group-text" for="inputGroupSelect01">EVENTS</label>
		</div>

		<select name="events" class="custom-select" id="inputGroupSelect01">

			{{#each events}}
			<option value="{{this.name}}">{{this.name}}</option>
			{{/each}}

		</select>
	</div>

	<div class="form-group">
		<label for="exampleFormControlTextarea1">Example textarea</label>
		<textarea class="form-control" id="exampleFormControlTextarea1" name="users" rows="4"></textarea>
	</div>
	<button class="btn btn-primary" type="submit" value="submit" onClick="getevent()">Submit</button>

</form>

