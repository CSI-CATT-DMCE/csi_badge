{{#unless x}}

<div class="jumbotron jumbotron-fluid" style="margin-bottom: 0;">
	<div class="container">
		<form action="/users/" method="post" name="getuser">
			<select name="users" class="custom-select" id="inputGroupSelect01">
				{{#each user}}
				<option value="{{this.u_id}}">{{this.name}}-({{this.email}})</option>
				{{/each}}
			</select>

			<button type="submit" class="btn btn-primary">Search</button>
		</form>
	</div>
</div>

{{/unless}}

<br />

{{#if x}}

<div class="container-fluid">
	<div class="container d-flex justify-content-center border border-dark">
		<img src="/{{y}}" class="rounded-circle border border-dark img-fluid" alt="" height="150" width="140" />
	</div>
	<div class="container border border-dark text-center">
		<p>{{z}}</p>
	</div>
	<!-- badges div started -->
	<div class="container-fluid mt-5">
		<div class="row">
			{{#each x}}
			<div class="container border border-dark col-md-4 mt-4">

				{{#unless this.badge_link}}
				<p>No certificates are there!</p>
				{{/unless}}

				<img class="img-fluid p-3" src="/{{this.badge_link}}" alt="{{this.event_name}}" />
			</div>
			{{/each}}
		</div>
	</div>
</div>

{{/if}}